@CHARSET "UTF-8";
.edit_area{float:left;width:82%;margin-left:45px;}
.return{font-size:14px;text-decoration:underline;margin-bottom:20px;}

.bemodify_area,.pass_area{position:absolute;top:100px;left:260px;width:350px;height:150px;border:4px solid #ccc;padding:10px 40px;background:#fff;}
.bemodify_area{height:220px;}
.bemodify_area .submit_bt1,.pass_area .submit_bt1{background:url('../image/3-btn.png') no-repeat 0 0;width:94px;height:31px;display:inline-block;text-align:center;line-height:31px;font-family:"微软雅黑";font-size:16px;color:#fff;font-weight:bold;}
.pass_area p{margin:20px 0;}
.bemodify_area .close,.pass_area .close{background:url('images/ui-icons_454545_256x240.png') no-repeat -100px -132px;margin-top:10px;float:right;width:10px;height:10px;}
.pass_area .pass_label{font-size:14px;font-weight:bold;}
.bemodify_area .addtion_area{width:300px;height:75px;}


.decision_area{position:absolute;top:0px;left:140px;background:#fff;border:4px solid #ccc;width:600px;height:400px;padding:20px;}
.decision_area div{margin-bottom:10px;overflow:hidden;}
.decision_area span{float:left;}
.decision_area .close{position:absolute;top:7px;right:20px;font-size:16px;cursor:pointer;}
.decision_area .submit{margin-left:75px;background:url('../image/3-btn.png') no-repeat 0 0;width:94px;height:31px;display:inline-block;text-align:center;line-height:31px;font-family:"微软雅黑";font-size:16px;color:#fff;font-weight:bold;}

.student_list .stu_info_icon{background:url(images/ui-icons_2e83ff_256x240.png) -132px -95px no-repeat;width:15px;height:15px;display:inline-block;}